---
import Navigation from '../components/Navigation.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '/scss/custom.scss'

import '@fortawesome/fontawesome-free/css/fontawesome.css';
import '@fortawesome/fontawesome-free/css/brands.css';
import '@fortawesome/fontawesome-free/css/solid.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="keywords" content="Modding, indie game, Developer, C#, Unity, New Horizons, Outer Wilds, Dredge, Cosmic Horror Fishing Buddies" />
		<meta name="description" content="An online portfolio of video games and mods by xen-42." />
		<link rel="icon" type="image/ico" href="/images/favicon.png"/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Open Graph meta data -->
		<meta property="og:url" content="https://xen-42.com/">
		<meta property="og:type" content="website">
		<meta property="og:site_name" content={title}>
		<meta property="og:title" content={title}>
		<meta property="og:description" content="An online portfolio of video games and mods by xen-42.">
		<meta property="og:image" content="https://xen-42.com/images/opengraph.webp">
		<meta property="og:image:width" content="1200px">
		<meta property="og:image:height" content="600px">

		<!-- Twitter tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="xen-42.com">
		<meta property="twitter:url" content="https://xen-42.com/">
		<meta property="twitter:title" content={title}>
		<meta property="twitter:description" content="An online portfolio of video games and mods by xen-42.">
		<meta property="twitter:image" content="https://xen-42.com/images/opengraph.webp">
		<meta property="twitter:image:width" content="1200px">
		<meta property="twitter:image:height" content="600px">
		<meta name="twitter:site" content="@xen_42">
		<meta name="twitter:creator" content="@xen_42">
		<meta name="twitter:creator:id" content="xen_42">
	</head>
	<body class="bg-secondary d-flex flex-column min-vh-100">

		<div class="text-dark d-flex flex-column justify-content-center m-auto p-4 container" style="max-width: 720px;">
			<Header />

			<div class="card bg-light m-2">
				<Navigation />
			</div>

			<div class="main-card card bg-primary m-2 p-4">
				<div class="d-flex justify-content-center text-center pb-2"><h1>{title}</h1></div>
				<slot />
			</div>

			<Footer />

		</div>

		<div class="flex-fill"></div>
	</body>
</html>
