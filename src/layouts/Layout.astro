---
import Navigation from '../components/Navigation.astro';
import '/scss/custom.scss'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-secondary">
		<header class="bg-overlay p-4">
			<div class="d-flex justify-content-center align-middle text-white">
				<div class="p-2"><h1>xen-42</h1></div>
				<div class="p-2"><img class="rounded-circle" style="height: 64px;" src="/images/avatar_large.png"></div>
			</div>
		</header>

		<div class="text-dark container d-flex flex-column justify-content-center">
			<div class="card bg-light m-2">
				<Navigation />
			</div>

			<div class="card bg-primary m-2 p-4">
				<div class="d-flex justify-content-center"><h1>{title}</h1></div>
				<slot />
			</div>
		</div>

	</body>
</html>
