---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div class="d-flex flex-row items-center">
    <hr style="height: 1px;" class="flex-1 mb-4 flex-fill items-center border border-black border-solid border-1 opacity-100">
    <h3 class="me-2 ms-2 text-center" style="max-width:66%;">{title}</h3>
    <hr style="height: 1px;" class="flex-1 mb-4 flex-fill items-center border border-black border-solid border-1 opacity-100">
</div>