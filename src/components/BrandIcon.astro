---
export interface Props {
	class: string;
    name: string;
    url: string;
}

const { class: className, name: brandName, url, linkClass = "link-primary" } = Astro.props;
---

<a class="d-flex flex-column text-center pb-4 text-decoration-none" class:list={linkClass} href={url}>
    <i class:list={className} class="fa-brands fa-2xl"></i>
    <span class="mt-3">{brandName}</span>
</a>